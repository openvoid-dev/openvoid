---
import HeaderLink from './HeaderLink.astro';
---

<header class="m-0 px-8 py-8 bg-gradient-to-b from-bg-primary to-bg-primary/30 sticky top-0 w-full">
	<nav class="flex items-center justify-between">
		<div class="flex items-center space-x-8">
			<HeaderLink href="/">Mission</HeaderLink>
			<HeaderLink href="https://coderepo.openvoid.dev/" target="_blank">Code Repo</HeaderLink>
		</div>

		<HeaderLink href="/">Open Void</HeaderLink>
	</nav>
</header>
<style>
	nav a {
		border-bottom: 4px solid transparent;
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
